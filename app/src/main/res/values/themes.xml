<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Covid19CountryInfo" parent="Theme.MaterialComponents">
        <!-- Action bar colour. -->
        <item name="colorPrimary">@color/light_green</item>
        <!-- FAB background colour, ProgressBar Colour-->
        <item name="colorSecondary">@color/light_red</item>
        <!-- FAB icon colour -->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_green</item>
        <!-- Background colour -->
        <item name="android:colorBackground">@color/dark_gray</item>
        <!-- Card background colour -->
        <item name="cardViewStyle">@style/Theme.Covid19CountryInfo.Card</item>
    </style>

    <style name="Theme.Covid19CountryInfo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Covid19CountryInfo.SearchActivity" parent="Theme.Covid19CountryInfo">
        <item name="colorSurface">@color/light_green</item>
        <item name="colorSecondary">@color/dark_green</item>
    </style>

    <style name="Theme.Covid19CountryInfo.Card" parent="Widget.MaterialComponents.CardView">
        <!-- Card background colour -->
        <item name="cardBackgroundColor">@color/light_gray</item>
    </style>

</resources>